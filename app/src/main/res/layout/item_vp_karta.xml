<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_karta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="25dp"
        android:outlineAmbientShadowColor="@color/green_1"
        android:outlineSpotShadowColor="@color/green_1"
        android:layout_margin="20dp"
        app:layout_constraintHeight_percent="0.3"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_fon">

            <ImageView
                android:id="@+id/image_dollor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintWidth_percent="0.3"
                android:src="@drawable/ic_karta"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.1"
                android:id="@+id/tv_date"
                android:text="@string/tv_date"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_sotish_narxi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="10 530 UZS"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.35"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Sotilishi"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@id/tv_sotish_narxi"
                app:layout_constraintLeft_toLeftOf="@id/tv_sotish_narxi"
                app:layout_constraintRight_toRightOf="@id/tv_sotish_narxi"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.1"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintHorizontal_bias="0.15"/>

            <TextView
                android:id="@+id/tv_olish_narxi"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="10 530 UZS"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintWidth_percent="0.35"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Olinishi"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@id/tv_olish_narxi"
                app:layout_constraintLeft_toLeftOf="@id/tv_olish_narxi"
                app:layout_constraintRight_toRightOf="@id/tv_olish_narxi"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.1"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintHorizontal_bias="0.15"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>